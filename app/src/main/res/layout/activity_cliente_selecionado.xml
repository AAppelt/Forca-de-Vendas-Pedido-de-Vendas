<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AcClienteSelecionado">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:gravity="top"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="408dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/item_preco"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/produto_limite"
            android:layout_alignStart="@+id/produto_limite"
            android:layout_below="@+id/produto_limite"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="R$ 000,00"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/produto_limite"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_weight="2.24"
            android:gravity="center"
            android:text="Limite de crÃ©dito:"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_pagamento"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/produto_limite"
            android:layout_alignBottom="@+id/produto_limite"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.34"
            android:gravity="center_horizontal"
            android:text="Cond de Pagamento:"
            android:textColor="#FFF"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bnt_escolher_teleselecionado"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginBottom="-3dp"
            android:layout_alignBottom="@+id/item_preco"
            android:layout_alignLeft="@+id/total_pagamento"
            android:layout_alignStart="@+id/total_pagamento"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:background="@drawable/helpborder"
            android:text="Escolher"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:gravity="center_horizontal|center"
        android:layout_above="@+id/fab"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp">



        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imagemseta"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Agora adicione \n produtos"
            android:textColor="#9E9E9E"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/imagemseta"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_arrow_select" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp">

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="80dp"
            android:id="@+id/rvListProdutos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/black"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="408dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/produto_selecionado"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_above="@+id/itens_selecionado"
            android:layout_alignLeft="@+id/itens_selecionado"
            android:layout_alignStart="@+id/itens_selecionado"
            android:layout_gravity="center|left"
            android:layout_marginTop="12dp"
            android:text="Produto:"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numProdutoSelecionados"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="13dp"
            android:text="0"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/itens_selecionado"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center|left"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="16dp"
            android:text="Itens:"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numItensSelecionado"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="32dp"
            android:text="0"
            android:textColor="#fff"
            android:textSize="15sp" />

            <TextView
                android:id="@+id/total_selecionado"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center|left"

                android:text="Total:"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="11dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/itens_selecionado"
                android:layout_alignStart="@+id/itens_selecionado" />

        <TextView
            android:id="@+id/numTotalSelecionado"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="R$ 000,00"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_alignBaseline="@+id/total_selecionado"
            android:layout_alignBottom="@+id/total_selecionado"
            android:layout_alignLeft="@+id/numItensSelecionado"
            android:layout_alignStart="@+id/numItensSelecionado" />


        <!--<LinearLayout-->
            <!--android:layout_width="90dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_alignBottom="@+id/total_selecionado"-->
            <!--android:layout_alignTop="@+id/produto_selecionado"-->
            <!--android:layout_toEndOf="@+id/produto_selecionado"-->
            <!--android:layout_toRightOf="@+id/produto_selecionado">-->

