<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:foregroundGravity="top"
        app:srcCompat="@drawable/soap_dispenser1600" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/imageView4">


        <TextView
            android:id="@+id/dPrecoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:maxLength="10"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/textView12"
            android:foregroundGravity="left"
            android:gravity="left"
            android:textColor="#28d986"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="43dp"
            android:layout_toRightOf="@+id/quantidaeeee"
            android:foregroundGravity="left"
            android:gravity="left"
            android:text="0"
            android:textColor="#28d986"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dPrecoProduto02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:maxLength="14"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/txtsubtotal"
            android:foregroundGravity="left"
            android:gravity="left"
            android:textColor="#28d986"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="26dp"
            android:text="Valor UnitÃ¡rio"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantidaeeee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="43dp"
            android:text="Quantidade"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtsubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:text="Subtotal"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4">

        <TextView
            android:id="@+id/dNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diaglog"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dCodProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="Diaglog"
            android:textSize="16sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp">

        <Button
            android:id="@+id/bnt_mais"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/helpborder"
            android:text="+ 1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bnt_menos"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/helpborder_red"
            android:text="- 1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bnt_maismais"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/helpborder"
            android:text="+ 10"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bnt_menosmenos"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/helpborder_red"
            android:text="- 10"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bnt_maismaismais"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:background="@drawable/helpborder"
            android:text="+ 100"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bnt_menosmenosmenos"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/helpborder_red"
            android:text="- 100"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bnt_ok_pedido"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="210dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/helpborder_green"
            android:drawableTop="@drawable/ic_done_white_36dp"
            android:paddingTop="10dp"
            android:text="Adicionar ao pedido"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>