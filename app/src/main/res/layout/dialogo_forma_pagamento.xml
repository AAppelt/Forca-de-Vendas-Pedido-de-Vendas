<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARTAO DE CRÉDITO"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:foregroundGravity="bottom"></View>

    <TextView
        android:id="@+id/cartao_debito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:text="CARTAO DE DÉBITO"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:id="@+id/vw_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:foregroundGravity="bottom"></View>

    <TextView
        android:id="@+id/cheque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="CHEQUE"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:id="@+id/vw_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:foregroundGravity="bottom"></View>

    <TextView
        android:id="@+id/dinheiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="DINHEIRO"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:id="@+id/vw_divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:foregroundGravity="bottom"></View>

    <TextView
        android:id="@+id/deposito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="DEPÓSITO"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:id="@+id/vw_divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:foregroundGravity="bottom"></View>


    <Button
        android:id="@+id/bnt_cancelar_pagamento"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/helpborder_red"
        android:text="Cancelar"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

</LinearLayout>